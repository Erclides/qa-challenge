{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "oneOf": [
    {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "full_name": { "type": "string" },
        "disabled": { "type": "boolean" }
      },
      "required": ["id", "username", "email", "full_name", "disabled"]
    },
    {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "full_name": { "type": "string" },
          "disabled": { "type": "boolean" }
        },
        "required": ["id", "username", "email", "full_name", "disabled"]
      }
    }
  ]
}
